<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="CKBIZ.USER">

    <select id="getAllUser" resultType="vip.ckbiz.vo.USERVO">
        <![CDATA[
        SELECT ID
                ,WEIXIN_OPEN_ID
                ,USERNAME
                ,PASSWORD
                ,EMAIL
                ,PHONE
                ,QUESTION
                ,ANSWER
                ,ROLE
                ,date_format(CREATETIME,'%Y-%m-%d %T') AS CREATETIME
                ,date_format(UPDATETIME,'%Y-%m-%d %T') AS UPDATETIME
        FROM    CKBIZ_USER
        ORDER BY ID DESC
        ]]>
    </select>

    <select id="checkUsername" parameterType="String" resultType="int">
        <![CDATA[
        SELECT  COUNT(1)
        FROM    CKBIZ_USER
        WHERE   USERNAME = #{username}
        ]]>
    </select>

    <select id="checkEmail" parameterType="String" resultType="int">
        <![CDATA[
        SELECT  COUNT(1)
        FROM    CKBIZ_USER
        WHERE   EMAIL = #{email}
        ]]>
    </select>

    <select id="selectLogin" parameterType="map" resultType="USERVO">
        <![CDATA[
        SELECT  ID
               ,WEIXIN_OPEN_ID
               ,USERNAME
               ,PASSWORD
               ,EMAIL
               ,PHONE
               ,QUESTION
               ,ANSWER
               ,ROLE
               ,date_format(CREATETIME,'%Y-%m-%d %T') AS CREATETIME
               ,date_format(UPDATETIME,'%Y-%m-%d %T') AS UPDATETIME
        FROM    CKBIZ_USER
        WHERE   USERNAME = #{USERNAME}
        AND     PASSWORD = #{PASSWORD}
        ]]>
    </select>

    <insert id="register" parameterType="USERVO">
        <![CDATA[
        INSERT INTO CKBIZ_USER
                    (
                     WEIXIN_OPEN_ID
                    ,USERNAME
                    ,PASSWORD
                    ,EMAIL
                    ,PHONE
                    ,QUESTION
                    ,ANSWER
                    ,ROLE
                    ,CREATETIME
                    )
        VALUES
                    (
                     #{WEIXIN_OPEN_ID}
                    ,#{USERNAME}
                    ,#{PASSWORD}
                    ,#{EMAIL}
                    ,#{PHONE}
                    ,#{QUESTION}
                    ,#{ANSWER}
                    ,#{ROLE}
                    ,sysdate()
                    )
        ]]>
    </insert>



</mapper>